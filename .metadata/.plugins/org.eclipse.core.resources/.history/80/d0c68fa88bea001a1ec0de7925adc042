<!--  Display the sum of the two numbers-->

<!DOCTYPE html>
<html>
<head>
	<title>Insert here</title>
	<style type="text/css">
		div{
			position: absolute;
			padding: 20px 50px 20px 50px;
			background-color: yellow;
			border: 5px solid red;
			border-radius: 15px;
		}
	</style>
</head>
<body>
<form action="HelloServlet2" name="add">
	<div>
	<table>
		<tr><td>First Nmuber</td><td><input type="number" name="fone"></td></tr>
		<tr><td>Second Number</td><td><input type="number" name="stwo"></td></tr>
		<tr><td colspan="2" align="center"><input type="Submit" value="Addition" onClick="return valid()"></td></tr>
	</table>
</div>
</form>
<script type="text/javascript">
function valid(){
var fnum = document.add.fone.value;
var snum = document.add.stwo.value;
if(fnum=="" || snum==""){
alert("Fields Can not be empty");
return false;
}
}
</script>
</body>
</html>
